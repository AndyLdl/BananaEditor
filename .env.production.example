# AI图片编辑工具生产环境配置示例

# Gemini API配置
GEMINI_API_KEY=your_production_gemini_api_key_here
GEMINI_API_ENDPOINT=https://generativelanguage.googleapis.com

# 文件上传限制
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_CONCURRENT_UPLOADS=5  # 最大并发上传数

# 速率限制配置
RATE_LIMIT_WINDOW=60000  # 1分钟 (毫秒)
RATE_LIMIT_MAX_REQUESTS=10  # 每分钟最大请求数
RATE_LIMIT_STRICT_MODE=true  # 生产环境启用严格模式

# 文件存储配置
UPLOAD_DIR=/var/www/uploads
TEMP_DIR=/tmp/ai-editor
FILE_CLEANUP_INTERVAL=3600000  # 1小时清理一次临时文件 (毫秒)
FILE_MAX_AGE=86400000  # 临时文件最大保存时间 24小时 (毫秒)

# 安全配置
SESSION_SECRET=your_strong_production_session_secret_here
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=false
SECURE_COOKIES=true

# HTTPS和安全头配置
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000  # 1年
CSP_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# 日志配置
LOG_LEVEL=info
LOG_FILE=/var/log/ai-editor/app.log
ERROR_LOG_FILE=/var/log/ai-editor/error.log

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_ENDPOINT=/health

# 数据库配置（如果需要）
DATABASE_URL=your_production_database_url_here
DATABASE_POOL_SIZE=10