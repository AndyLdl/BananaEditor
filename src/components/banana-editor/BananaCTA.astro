---
/**
 * BananaEditor CTA组件
 * 引导用户开始使用编辑器
 */

import { Icon } from "astro-icon/components";
import BananaButton from "@components/ui/BananaButton.astro";
import { loadTranslations, createTranslator } from "../../i18n/utils";

// 获取当前语言
import { detectLanguageFromRequest } from "../../utils/language-detector";
const currentLang = detectLanguageFromRequest(Astro.request);

// 加载翻译
const homeTranslations = await loadTranslations(currentLang, "home");
const t = createTranslator(currentLang, homeTranslations);
---

<section class="relative py-20 sm:py-32 overflow-hidden">
  <!-- 背景渐变 -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-banana-primary via-banana-secondary to-banana-accent">
  </div>

  <!-- 背景图案 -->
  <div
    class="absolute inset-0 bg-[url('/images/banana-pattern.svg')] opacity-10">
  </div>

  <!-- 浮动元素 -->
  <div
    class="absolute top-20 left-10 w-16 h-16 bg-white/10 rounded-full animate-float">
  </div>
  <div
    class="absolute top-40 right-20 w-12 h-12 bg-white/10 rounded-full animate-float-delayed">
  </div>
  <div
    class="absolute bottom-32 left-1/4 w-8 h-8 bg-white/10 rounded-full animate-float-slow">
  </div>

  <div class="relative mx-auto max-w-4xl px-6 lg:px-8 text-center">
    <!-- 主标题 -->
    <h2
      class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6 leading-tight">
      {t("cta.title")}
    </h2>

    <!-- 副标题 -->
    <p class="text-xl sm:text-2xl text-white/90 mb-4 font-medium">
      {t("cta.subtitle")}
    </p>

    <!-- 描述 -->
    <p class="text-lg text-white/80 mb-12 max-w-2xl mx-auto leading-relaxed">
      {t("cta.description")}
    </p>

    <!-- CTA按钮 -->
    <div class="mb-8">
      <BananaButton
        href="/editor"
        size="xl"
        variant="white"
        class="group shadow-2xl hover:shadow-3xl transform hover:-translate-y-1 transition-all duration-300">
        <Icon
          name="heroicons:rocket-launch"
          class="w-6 h-6 mr-3 group-hover:animate-bounce"
        />
        {t("cta.button")}
        <Icon
          name="heroicons:arrow-right"
          class="w-5 h-5 ml-3 group-hover:translate-x-1 transition-transform"
        />
      </BananaButton>
    </div>

    <!-- 注释信息 -->
    <p class="text-white/70 text-sm font-medium">
      {t("cta.note")}
    </p>

    <!-- 统计信息 -->
    <div class="mt-16 grid grid-cols-1 sm:grid-cols-3 gap-8">
      <div class="text-center">
        <div class="text-3xl sm:text-4xl font-bold text-white mb-2">10K+</div>
        <div class="text-white/80 text-sm font-medium">Active Users</div>
      </div>
      <div class="text-center">
        <div class="text-3xl sm:text-4xl font-bold text-white mb-2">1M+</div>
        <div class="text-white/80 text-sm font-medium">Images Generated</div>
      </div>
      <div class="text-center">
        <div class="text-3xl sm:text-4xl font-bold text-white mb-2">99.9%</div>
        <div class="text-white/80 text-sm font-medium">Uptime</div>
      </div>
    </div>

    <!-- 特性徽章 -->
    <div class="mt-12 flex flex-wrap gap-4 justify-center">
      <div
        class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-white text-sm font-medium">
        <Icon name="heroicons:shield-check" class="w-4 h-4" />
        <span>Secure & Private</span>
      </div>
      <div
        class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-white text-sm font-medium">
        <Icon name="heroicons:bolt" class="w-4 h-4" />
        <span>Lightning Fast</span>
      </div>
      <div
        class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-white text-sm font-medium">
        <Icon name="heroicons:globe-alt" class="w-4 h-4" />
        <span>Multi-language</span>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(10deg);
    }
  }

  @keyframes float-delayed {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-25px) rotate(-10deg);
    }
  }

  @keyframes float-slow {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-15px) rotate(5deg);
    }
  }

  .animate-float {
    animation: float 4s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 5s ease-in-out infinite 1.5s;
  }

  .animate-float-slow {
    animation: float-slow 6s ease-in-out infinite 3s;
  }
</style>
