---
// React 聊天组件集成
import ChatContainer from "./react/ChatContainer.tsx";
---

<div id="react-chat-root" class="react-chat-container">
  <ChatContainer client:visible />
</div>

<style>
  #react-chat-root {
    display: flex;
    flex-direction: column;
    flex: 1;
    min-height: 0;
    overflow: hidden;
  }

  .react-chat-container {
    display: flex;
    flex-direction: column;
    height: 100%;
    overflow: hidden;
  }
</style>
