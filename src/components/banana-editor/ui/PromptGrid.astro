<script>
  // æç¤ºè¯ç½‘æ ¼åŠŸèƒ½å®ç°
  class PromptGrid {
    constructor() {
      this.container = document.getElementById("prompt-grid");
      this.loadingState = document.getElementById("loading-state");
      this.emptyState = document.getElementById("empty-state");
      this.pagination = document.getElementById("pagination");
      this.prevButton = document.getElementById("prev-page");
      this.nextButton = document.getElementById("next-page");
      this.pageInfo = document.getElementById("page-info");
      this.createButton = document.getElementById("create-new-prompt");

      this.prompts = [];
      this.filteredPrompts = [];
      this.currentPage = 1;
      this.itemsPerPage = 12;
      this.currentView = "grid";
      this.currentFilters = {
        search: "",
        category: "all",
        sort: "newest",
        rating: "all",
      };

      this.init();
    }

    async init() {
      // ç»‘å®šäº‹ä»¶ç›‘å¬å™¨
      this.bindEvents();

      // åŠ è½½æç¤ºè¯æ•°æ®
      await this.loadPrompts();

      // åˆå§‹æ¸²æŸ“
      this.applyFilters();
    }

    bindEvents() {
      // æœç´¢äº‹ä»¶
      document.addEventListener("promptSearch", (e) => {
        this.currentFilters.search = e.detail.query;
        this.currentPage = 1;
        this.applyFilters();
      });

      // åˆ†ç±»ç­›é€‰äº‹ä»¶
      document.addEventListener("promptCategoryFilter", (e) => {
        this.currentFilters.category = e.detail.category;
        this.currentPage = 1;
        this.applyFilters();
      });

      // ç­›é€‰å™¨å˜æ›´äº‹ä»¶
      document.addEventListener("promptFiltersChanged", (e) => {
        this.currentFilters.sort = e.detail.sort;
        this.currentFilters.rating = e.detail.rating;
        this.currentPage = 1;
        this.applyFilters();
      });

      // è§†å›¾å˜æ›´äº‹ä»¶
      document.addEventListener("promptViewChanged", (e) => {
        this.currentView = e.detail.view;
        this.updateView();
      });

      // åˆ†é¡µäº‹ä»¶
      this.prevButton.addEventListener("click", () => {
        if (this.currentPage > 1) {
          this.currentPage--;
          this.renderPrompts();
          this.updatePagination();
        }
      });

      this.nextButton.addEventListener("click", () => {
        const totalPages = Math.ceil(
          this.filteredPrompts.length / this.itemsPerPage,
        );
        if (this.currentPage < totalPages) {
          this.currentPage++;
          this.renderPrompts();
          this.updatePagination();
        }
      });

      // åˆ›å»ºæ–°æç¤ºè¯äº‹ä»¶
      this.createButton.addEventListener("click", () => {
        this.openCreateModal();
      });
    }

    async loadPrompts() {
      try {
        this.showLoading();

        // ä»APIåŠ è½½æç¤ºè¯
        const response = await fetch("/api/prompts");
        const result = await response.json();

        if (result.success) {
          this.prompts = result.data.prompts || [];
          this.hideLoading();
        } else {
          throw new Error(result.error?.message || "åŠ è½½å¤±è´¥");
        }
      } catch (error) {
        console.error("åŠ è½½æç¤ºè¯å¤±è´¥:", error);
        this.hideLoading();
        this.showEmpty();
      }
    }

    applyFilters() {
      let filtered = [...this.prompts];

      // æœç´¢ç­›é€‰
      if (this.currentFilters.search) {
        const query = this.currentFilters.search.toLowerCase();
        filtered = filtered.filter(
          (prompt) =>
            prompt.title.toLowerCase().includes(query) ||
            prompt.content.toLowerCase().includes(query) ||
            prompt.tags.some((tag) => tag.toLowerCase().includes(query)),
        );
      }

      // åˆ†ç±»ç­›é€‰
      if (this.currentFilters.category !== "all") {
        filtered = filtered.filter(
          (prompt) => prompt.category === this.currentFilters.category,
        );
      }

      // è¯„åˆ†ç­›é€‰
      if (this.currentFilters.rating !== "all") {
        const minRating = parseInt(this.currentFilters.rating);
        filtered = filtered.filter((prompt) => prompt.rating >= minRating);
      }

      // æ’åº
      filtered.sort((a, b) => {
        switch (this.currentFilters.sort) {
          case "newest":
            return new Date(b.createdAt) - new Date(a.createdAt);
          case "oldest":
            return new Date(a.createdAt) - new Date(b.createdAt);
          case "rating":
            return b.rating - a.rating;
          case "usage":
            return b.usageCount - a.usageCount;
          case "alphabetical":
            return a.title.localeCompare(b.title);
          default:
            return 0;
        }
      });

      this.filteredPrompts = filtered;

      // æ›´æ–°åˆ†ç±»è®¡æ•°
      this.updateCategoryCounts();

      // æ¸²æŸ“ç»“æœ
      if (filtered.length === 0) {
        this.showEmpty();
      } else {
        this.renderPrompts();
        this.updatePagination();
      }
    }

    updateCategoryCounts() {
      const counts = {};
      const categories = ["portrait", "landscape", "abstract", "anime"];

      categories.forEach((category) => {
        counts[category] = this.prompts.filter(
          (p) => p.category === category,
        ).length;
      });

      // è§¦å‘è®¡æ•°æ›´æ–°äº‹ä»¶
      const countEvent = new CustomEvent("promptsDataUpdated", {
        detail: {
          counts: counts,
          total: this.prompts.length,
        },
      });
      document.dispatchEvent(countEvent);
    }

    renderPrompts() {
      const startIndex = (this.currentPage - 1) * this.itemsPerPage;
      const endIndex = startIndex + this.itemsPerPage;
      const pagePrompts = this.filteredPrompts.slice(startIndex, endIndex);

      this.container.innerHTML = pagePrompts
        .map((prompt) => this.createPromptCard(prompt))
        .join("");

      // ç»‘å®šå¡ç‰‡äº‹ä»¶
      this.bindCardEvents();

      this.hideLoading();
      this.hideEmpty();
      this.container.style.display = "grid";
    }

    createPromptCard(prompt) {
      const stars = Array.from(
        { length: 5 },
        (_, i) =>
          `<span class="star ${i < prompt.rating ? "" : "empty"}">â˜…</span>`,
      ).join("");

      const tags = prompt.tags
        .map((tag) => `<span class="prompt-tag">${tag}</span>`)
        .join("");

      return `
        <div class="prompt-card" data-prompt-id="${prompt.id}">
          <div class="prompt-card-header">
            <h3 class="prompt-title">${prompt.title}</h3>
            <span class="prompt-category">${this.getCategoryName(prompt.category)}</span>
          </div>
          
          <div class="prompt-content">${prompt.content}</div>
          
          <div class="prompt-meta">
            <div class="prompt-rating">${stars}</div>
            <div class="prompt-usage">
              <svg viewBox="0 0 20 20" fill="currentColor">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              ${prompt.usageCount}
            </div>
          </div>
          
          <div class="prompt-tags">${tags}</div>
          
          <div class="prompt-actions">
            <button class="action-button primary" data-action="use" data-prompt-id="${prompt.id}">
              <svg viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd" />
              </svg>
              åœ¨ç¼–è¾‘å™¨ä¸­ä½¿ç”¨
            </button>
            
            <button class="action-button" data-action="copy" data-prompt-id="${prompt.id}">
              <svg viewBox="0 0 20 20" fill="currentColor">
                <path d="M8 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" />
                <path d="M6 3a2 2 0 00-2 2v11a2 2 0 002 2h8a2 2 0 002-2V5a2 2 0 00-2-2 3 3 0 01-3 3H9a3 3 0 01-3-3z" />
              </svg>
              å¤åˆ¶
            </button>
            
            <button class="action-button" data-action="favorite" data-prompt-id="${prompt.id}">
              <svg viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
              </svg>
              æ”¶è—
            </button>
          </div>
        </div>
      `;
    }

    bindCardEvents() {
      // ç»‘å®šæ“ä½œæŒ‰é’®äº‹ä»¶
      this.container.querySelectorAll("[data-action]").forEach((button) => {
        button.addEventListener("click", (e) => {
          e.stopPropagation();
          const action = button.dataset.action;
          const promptId = button.dataset.promptId;
          this.handleCardAction(action, promptId);
        });
      });

      // ç»‘å®šå¡ç‰‡ç‚¹å‡»äº‹ä»¶
      this.container.querySelectorAll(".prompt-card").forEach((card) => {
        card.addEventListener("click", () => {
          const promptId = card.dataset.promptId;
          this.openPromptModal(promptId);
        });
      });
    }

    handleCardAction(action, promptId) {
      const prompt = this.prompts.find((p) => p.id === promptId);
      if (!prompt) return;

      switch (action) {
        case "use":
          this.useInEditor(prompt);
          break;
        case "copy":
          this.copyPrompt(prompt);
          break;
        case "favorite":
          this.toggleFavorite(prompt);
          break;
      }
    }

    useInEditor(prompt) {
      // è·³è½¬åˆ°ç¼–è¾‘å™¨å¹¶ä¼ é€’æç¤ºè¯
      const editorUrl = `/editor?prompt=${encodeURIComponent(prompt.content)}`;
      window.open(editorUrl, "_blank");

      // å¢åŠ ä½¿ç”¨æ¬¡æ•°
      prompt.usageCount++;

      // æ˜¾ç¤ºæˆåŠŸæ¶ˆæ¯
      this.showNotification("æ­£åœ¨è·³è½¬åˆ°ç¼–è¾‘å™¨...", "success");
    }

    copyPrompt(prompt) {
      navigator.clipboard
        .writeText(prompt.content)
        .then(() => {
          this.showNotification("å·²å¤åˆ¶åˆ°å‰ªè´´æ¿", "success");
        })
        .catch(() => {
          this.showNotification("å¤åˆ¶å¤±è´¥", "error");
        });
    }

    toggleFavorite(prompt) {
      // è¿™é‡Œå¯ä»¥å®ç°æ”¶è—åŠŸèƒ½
      this.showNotification("æ”¶è—åŠŸèƒ½å¼€å‘ä¸­...", "info");
    }

    getCategoryName(category) {
      const categoryNames = {
        portrait: "äººç‰©è‚–åƒ",
        landscape: "é£æ™¯è‡ªç„¶",
        abstract: "æŠ½è±¡è‰ºæœ¯",
        anime: "åŠ¨æ¼«é£æ ¼",
      };
      return categoryNames[category] || category;
    }

    updateView() {
      this.container.className = `prompt-grid ${this.currentView}-view`;
    }

    updatePagination() {
      const totalPages = Math.ceil(
        this.filteredPrompts.length / this.itemsPerPage,
      );

      if (totalPages <= 1) {
        this.pagination.style.display = "none";
        return;
      }

      this.pagination.style.display = "flex";
      this.pageInfo.textContent = `ç¬¬ ${this.currentPage} é¡µï¼Œå…± ${totalPages} é¡µ`;

      this.prevButton.disabled = this.currentPage === 1;
      this.nextButton.disabled = this.currentPage === totalPages;
    }

    showLoading() {
      this.loadingState.style.display = "flex";
      this.container.style.display = "none";
      this.emptyState.style.display = "none";
      this.pagination.style.display = "none";
    }

    hideLoading() {
      this.loadingState.style.display = "none";
    }

    showEmpty() {
      this.emptyState.style.display = "flex";
      this.container.style.display = "none";
      this.pagination.style.display = "none";
    }

    hideEmpty() {
      this.emptyState.style.display = "none";
    }

    openPromptModal(promptId) {
      // æ‰“å¼€æç¤ºè¯è¯¦æƒ…æ¨¡æ€æ¡†
      console.log("æ‰“å¼€æç¤ºè¯è¯¦æƒ…:", promptId);
    }

    openCreateModal() {
      // æ‰“å¼€åˆ›å»ºæç¤ºè¯æ¨¡æ€æ¡†
      console.log("æ‰“å¼€åˆ›å»ºæç¤ºè¯æ¨¡æ€æ¡†");
