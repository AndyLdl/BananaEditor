---
// BananaEditor 新布局组件
// 布局：功能导航 + 会话列表 + 聊天区域 + 图片区域（四栏布局）

import FunctionNavbar from "./layout/FunctionNavbar.astro";
import SessionManager from "./SessionManager.astro";
import BananaAIProcessor from "./BananaAIProcessor.astro";
import ReactChatIntegration from "./ReactChatIntegration.astro";
import ReactImageWorkspaceIntegration from "./ReactImageWorkspaceIntegration.astro";
import Breadcrumb from "../ui/Breadcrumb.astro";
import EditorUserInfoWrapper from "./EditorUserInfoWrapper.astro";
import { baseSEOConfig } from "../../config/seo";

export interface Props {
  className?: string;
  activeMode?: "generate" | "modify" | "fusion";
}

const { className = "", activeMode = "generate" } = Astro.props;

// 定义面包屑导航项（使用完整的绝对URL以符合结构化数据规范）
const breadcrumbItems = [
  {
    label: "Home",
    href: baseSEOConfig.siteUrl,
    svgIcon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
      <polyline points="9,22 9,12 15,12 15,22"></polyline>
    </svg>`,
  },
  {
    label: "AI Editor",
    href: `${baseSEOConfig.siteUrl}/editor`,
    svgIcon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
      <path d="M2 17l10 5 10-5"></path>
      <path d="M2 12l10 5 10-5"></path>
    </svg>`,
  },
  {
    label: "Banana Editor",
    svgIcon: `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
    </svg>`,
  },
];
---

<div class={`banana-editor-new-layout ${className}`} id="banana-editor-layout">
  <!-- 顶部导航栏 -->
  <div class="editor-topbar">
    <div class="breadcrumb-container">
      <Breadcrumb items={breadcrumbItems} />
    </div>
    <div class="editor-user-container">
      <EditorUserInfoWrapper />
    </div>
  </div>

  <!-- 会话管理器（隐藏组件） -->
  <SessionManager />

  <!-- AI处理器（隐藏组件） -->
  <BananaAIProcessor />

  <!-- 主要内容区域 -->
  <main class="editor-main">
    <!-- 左侧功能导航栏 -->
    <FunctionNavbar activeMode={activeMode} />

    <!-- 会话列表（功能导航右侧） -->
    <div id="session-sidebar-container"></div>

    <!-- 侧边栏遮罩层 -->
    <div class="sidebar-overlay" id="sidebar-overlay"></div>

    <!-- 中央聊天区域 -->
    <section class="chat-workspace">
      <!-- 聊天标题栏 -->
      <div class="chat-header">
        <div class="chat-title-section">
          <h2 class="chat-title">
            <svg
              class="title-icon"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2">
              <path
                d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"
              ></path>
            </svg>
            <span class="title-text">AI Chat</span>
          </h2>
          <div class="conversation-status" id="conversation-status">
            <span class="status-text">Ready to start conversation</span>
          </div>
        </div>
        <div class="chat-actions">
          <button
            class="chat-btn"
            id="clear-conversation"
            title="Clear current session"
            onclick="window.clearCurrentSession()">
            <svg
              class="btn-icon"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2">
              <polyline points="3,6 5,6 21,6"></polyline>
              <path
                d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"
              ></path>
            </svg>
          </button>
          <button
            class="chat-btn"
            id="export-conversation"
            title="Export conversation"
            onclick="window.exportCurrentSession()">
            <svg
              class="btn-icon"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="17,8 12,3 7,8"></polyline>
              <line x1="12" y1="3" x2="12" y2="15"></line>
            </svg>
          </button>
        </div>
      </div>

      <!-- 对话历史和输入框 - React 组件 -->
      <ReactChatIntegration />
    </section>

    <!-- 右侧图片区域 - React 组件 -->
    <ReactImageWorkspaceIntegration />
  </main>
</div>

<style>
  /* BananaEditor 新布局样式 */
