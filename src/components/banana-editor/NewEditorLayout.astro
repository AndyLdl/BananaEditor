  });

  // 响应式布局处理函数（简化版，图片区域已由 React 处理）
  function handleResponsiveLayout() {
    const hamburgerMenu = document.querySelector(
      ".hamburger-menu"
    ) as HTMLElement;

    // 汉堡菜单切换（1024px以下）
    if (window.innerWidth <= 1024 && hamburgerMenu) {
      hamburgerMenu.style.display = "flex";
    } else if (hamburgerMenu) {
      hamburgerMenu.style.display = "none";
    }
  }

  // 旧的图片相关代码已删除，这些功能现在由 React 组件处理
  // 包括：全屏查看、拖拽分割条、历史图片管理等

  // 初始化React SessionSidebar组件
  function initializeSessionSidebar() {
    // 动态加载React和ReactDOM
    if (
      typeof React === "undefined" ||
      typeof (window as any).ReactDOM === "undefined"
    ) {
      // 加载React库
      const reactScript = document.createElement("script");
      reactScript.src = "https://unpkg.com/react@18/umd/react.development.js";
      reactScript.onload = () => {
        const reactDOMScript = document.createElement("script");
        reactDOMScript.src =
          "https://unpkg.com/react-dom@18/umd/react-dom.development.js";
        reactDOMScript.onload = () => {
          loadSessionSidebarComponent();
        };
        document.head.appendChild(reactDOMScript);
      };
      document.head.appendChild(reactScript);
    } else {
      loadSessionSidebarComponent();
    }
  }

  function loadSessionSidebarComponent() {
    // 加载SessionSidebar组件
    const sidebarScript = document.createElement("script");
    sidebarScript.src = "/js/SessionSidebar.js";
    sidebarScript.onload = () => {
      renderSessionSidebar();
    };
    document.head.appendChild(sidebarScript);
  }

  // 用于存储 SessionSidebar 的 React root，避免重复创建
  let sessionSidebarRoot: any = null;

  function renderSessionSidebar() {
    // 如果已经渲染过，不再重复渲染
    if (sessionSidebarRoot) {
      console.log("⚠️ SessionSidebar 已经渲染，跳过重复渲染");
      return;
    }

    // 等待SessionSidebar组件加载
    const win = window as any;
    if (typeof win.SessionSidebar !== "undefined") {
      const container = document.getElementById("session-sidebar-container");
      if (container && win.ReactDOM) {
        const element = win.React.createElement(win.SessionSidebar);

        // 使用 React 18 的 createRoot API
        if (win.ReactDOM.createRoot) {
          sessionSidebarRoot = win.ReactDOM.createRoot(container);
          sessionSidebarRoot.render(element);
          console.log(
            "✅ SessionSidebar React组件已渲染 (React 18 createRoot)"
          );
        } else {
          // 降级到 React 17 API
          win.ReactDOM.render(element, container);
          sessionSidebarRoot = true; // 标记已渲染
          console.log("✅ SessionSidebar React组件已渲染 (React 17 fallback)");
        }
      }
    } else {
      // 如果组件还没加载，等待一下再试
      setTimeout(renderSessionSidebar, 100);
    }
  }

  // 窗口大小改变时重新处理布局
  window.addEventListener("resize", function () {
    handleResponsiveLayout();
  });
</script>
