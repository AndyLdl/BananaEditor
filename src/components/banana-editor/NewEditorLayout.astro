    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      #ffd700 50%,
      transparent 100%
    );
  }

  .input-container {
    display: flex;
    gap: 12px;
    margin-bottom: 20px;
    position: relative;
    align-items: stretch; /* 确保所有子元素高度一致 */
  }

  .input-wrapper {
    flex: 1;
    position: relative;
    display: flex;
  }

  .chat-input {
    width: 100%;
    padding: 16px 50px 16px 20px;
    border: 2px solid #e1e5e9;
    border-radius: 16px;
    font-size: 15px;
    font-family: inherit;
    resize: vertical;
    min-height: 88px;
    max-height: 140px;
    background: white;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
