    handleResponsiveLayout();

    // 导航功能已移至 FunctionNavbar 组件

    // 监听来自 FunctionNavbar 的功能切换事件
    document.addEventListener("function:change", (e: CustomEvent) => {
      const { function: mode } = e.detail;
      const modeIcon = document.getElementById("current-mode-icon");
      const modeText = document.getElementById("current-mode-text");

      // 更新模式指示器
      const modeConfig = {
        generate: {
          icon: `<circle cx="12" cy="12" r="3"></circle><path d="M12 1v6m0 6v6m11-7h-6m-6 0H1"></path>`,
          text: "Image Generation",
        },
        modify: {
          icon: `<path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>`,
          text: "Image Modification",
        },
        fusion: {
          icon: `<path d="M8 3v3a2 2 0 0 1-2 2H3m18 0h-3a2 2 0 0 1-2-2V3m0 18v-3a2 2 0 0 0-2-2H3m18 0h-3a2 2 0 0 0-2 2v3"></path>`,
