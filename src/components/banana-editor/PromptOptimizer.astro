      // ç®€å•çš„å…³é”®è¯å¯†åº¦åˆ†æ
      const originalKeywordCount = this.countKeywords(this.originalPrompt);
      const optimizedKeywordCount = this.countKeywords(this.optimizedPrompt);

      if (originalKeywords) {
