      // æ˜¾ç¤ºæˆåŠŸçŠ¶æ€
      this.showSuccessStatus();

      // æ˜¾ç¤ºå»ºè®®å’Œå¯¹æ¯”
      if (result.suggestions) {
        this.showSuggestions(result.suggestions);
      }

      this.showComparison();
      this.updateCharacterCount();
      this.updateApplyButton();
    }

