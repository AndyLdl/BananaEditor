          this.optimizedPrompt.length > 100
            ? "è¯¦ç»†"
            : this.optimizedPrompt.length > 50
              ? "ä¸­ç­‰"
              : "ç®€å•";
      }
    }

    private countKeywords(text: string): number {
      // ç®€å•çš„å…³é”®è¯è®¡æ•°é€»è¾‘
      const keywords = [
        "é«˜è´¨é‡",
        "4K",
