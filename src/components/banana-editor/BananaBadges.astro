---
/**
 * BananaBadges - Badge Showcase Component
 * Displays project badges and recognitions
 */
---

<section
  class="badge-showcase py-12 bg-gradient-to-b from-transparent to-slate-50/50">
  <div class="max-w-6xl mx-auto px-4">
    <div class="text-center mb-8">
      <h2 class="text-2xl md:text-3xl font-bold text-slate-800 mb-3">
        Community Recognition & Badges
      </h2>
      <p class="text-slate-600 text-sm md:text-base">
        Trusted and featured by the community
      </p>
    </div>

    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12">
      <!-- Fazier Launch Badge -->
      <div class="badge-item">
        <a
          href="https://fazier.com/launches/bananaeditor.net"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block transition-transform hover:scale-110 hover:shadow-lg rounded-lg p-2"
          aria-label="Fazier Launch Badge">
          <img
            src="https://fazier.com/api/v1//public/badges/launch_badges.svg?badge_type=launched&theme=light"
            width="120"
            alt="Fazier Launch Badge"
            loading="lazy"
            class="h-auto"
          />
        </a>
      </div>

      <!-- Reserved space: Add more badges here -->
      <!-- 
      <div class="badge-item">
        <a href="#" target="_blank" rel="noopener noreferrer">
          <img src="/path/to/badge.svg" alt="Badge Name" loading="lazy" />
        </a>
      </div>
      -->
    </div>

    <!-- Additional Information -->
    <div class="mt-8 text-center">
      <p class="text-xs text-slate-500">
        ðŸŽ‰ Officially launched on <a
          href="https://fazier.com/launches/bananaeditor.net"
          target="_blank"
          rel="noopener noreferrer"
          class="text-orange-500 hover:text-orange-600 font-medium">Fazier</a
        >
      </p>
    </div>
  </div>
</section>

<style>
  .badge-showcase {
    position: relative;
    overflow: hidden;
  }

  .badge-item {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60px;
  }

  .badge-item a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .badge-item img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  /* Hover effect */
  .badge-item a:hover {
    transform: translateY(-2px);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .badge-showcase {
      padding: 2rem 0;
    }

    .badge-item img {
      max-width: 100px;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .badge-showcase {
      background: linear-gradient(
        to bottom,
        transparent,
        rgba(15, 23, 42, 0.5)
      );
    }

    .badge-showcase h2 {
      color: #f1f5f9;
    }

    .badge-showcase p {
      color: #cbd5e1;
    }
  }

  /* Subtle animation effect */
  @keyframes badge-float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-5px);
    }
  }

  .badge-item:hover {
    animation: badge-float 2s ease-in-out infinite;
  }
</style>
