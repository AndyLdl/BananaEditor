---
/**
 * BananaEditor专用Hero组件
 * 突出"nano banana"关键词和品牌展示
 * 方案一：增强视觉层次，现代化设计
 */

import { Picture } from "astro:assets";
import { Icon } from "astro-icon/components";
import Link from "@components/ui/link.astro";
import BananaButton from "@components/ui/BananaButton.astro";
import { loadTranslations, createTranslator } from "../../i18n/utils";

// 获取当前语言
import { detectLanguageFromRequest } from "../../utils/language-detector";
const currentLang = detectLanguageFromRequest(Astro.request);

// 加载翻译
const homeTranslations = await loadTranslations(currentLang, "home");
const t = createTranslator(currentLang, homeTranslations);

// Hero图片 - 可以是AI生成的示例图片
const heroImageUrl = "/images/banana-hero-demo.jpg";
---

<section
  class="relative overflow-hidden bg-gradient-to-br from-banana-light via-white to-banana-light/50 pt-16 pb-20 sm:pt-24 sm:pb-32">
  
  <!-- 背景装饰 - 增强 -->
  <div class="absolute inset-0">
    <!-- 网格图案 - 更明显 -->
    <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-[0.08]"></div>
    
    <!-- 动态渐变光晕 -->
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-banana-primary/10 rounded-full blur-3xl animate-pulse-slow"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-banana-secondary/10 rounded-full blur-3xl animate-pulse-slow-delayed"></div>
    
    <!-- 移动光斑 -->
    <div class="absolute top-1/2 left-0 w-72 h-72 bg-gradient-to-r from-yellow-400/20 to-orange-500/20 rounded-full blur-3xl animate-move-horizontal"></div>
    
    <!-- 粒子效果 -->
    <div class="absolute inset-0">
      {[...Array(6)].map((_, i) => (
        <div
          class={`absolute w-2 h-2 bg-banana-primary/30 rounded-full blur-sm animate-float-particle`}
          style={`left: ${20 + i * 15}%; top: ${30 + (i % 3) * 20}%; animation-delay: ${i * 0.5}s;`}>
        </div>
      ))}
    </div>
  </div>

  <!-- 浮动的香蕉元素装饰 - 增强 -->
  <div
    class="absolute top-20 left-10 w-10 h-10 text-banana-primary/25 animate-float text-2xl filter drop-shadow-lg">
    🍌
  </div>
  <div
    class="absolute top-40 right-20 w-8 h-8 text-banana-secondary/30 animate-float-delayed text-xl filter drop-shadow-lg">
    🍌
  </div>
  <div
    class="absolute bottom-32 left-1/4 w-6 h-6 text-banana-accent/25 animate-float-slow text-lg filter drop-shadow-lg">
    🍌
  </div>

  <div class="relative mx-auto max-w-7xl px-6 lg:px-8 z-10">
    <div class="grid lg:grid-cols-2 gap-16 lg:gap-20 items-center">
      <!-- 左侧内容 -->
      <div class="text-center lg:text-left">
        <!-- 品牌标识 -->
        <div class="mb-8">
          <div
            class="inline-flex items-center gap-2 px-4 py-1.5 bg-white/70 backdrop-blur-md rounded-full text-banana-primary font-medium text-sm shadow-lg border border-banana-primary/20 hover:shadow-xl hover:scale-105 transition-all duration-300">
            <span class="text-base animate-bounce-subtle">🍌</span>
            <span>Nano Banana AI Technology</span>
          </div>
        </div>

        <!-- 主标题 - 增强视觉效果 -->
        <div class="relative mb-4">
          <!-- 标题背景光晕 -->
          <div class="absolute -inset-4 bg-banana-gradient/20 rounded-2xl blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <h1
            class="relative text-3xl sm:text-4xl lg:text-5xl font-bold tracking-tight text-gray-900">
            <span class="block drop-shadow-sm">{t("hero.title")}</span>
          </h1>
        </div>

        <!-- 副标题 - 动态渐变 -->
        <div class="relative mb-6">
          <p
            class="text-xl sm:text-2xl lg:text-3xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-banana-primary via-orange-500 to-banana-secondary bg-[length:200%_auto] animate-gradient-flow">
            {t("hero.subtitle")}
          </p>
        </div>

        <!-- 核心数据展示条 -->
        <div class="flex flex-wrap items-center gap-4 justify-center lg:justify-start mb-8">
          <div class="flex items-center gap-2 px-4 py-2 bg-white/80 backdrop-blur-sm rounded-xl border border-orange-200 shadow-md hover:shadow-lg transition-shadow">
            <Icon name="heroicons:bolt" class="w-5 h-5 text-orange-500" />
            <span class="text-2xl font-black text-orange-600">2.3</span>
            <span class="text-sm text-gray-600 font-medium">seconds</span>
          </div>
          <div class="flex items-center gap-2 px-4 py-2 bg-white/80 backdrop-blur-sm rounded-xl border border-green-200 shadow-md hover:shadow-lg transition-shadow">
            <Icon name="heroicons:check-circle" class="w-5 h-5 text-green-600" />
            <span class="text-2xl font-black text-green-600">100%</span>
            <span class="text-sm text-gray-600 font-medium">consistency</span>
          </div>
          <div class="flex items-center gap-2 px-4 py-2 bg-white/80 backdrop-blur-sm rounded-xl border border-purple-200 shadow-md hover:shadow-lg transition-shadow">
            <Icon name="heroicons:rocket-launch" class="w-5 h-5 text-purple-600" />
            <span class="text-2xl font-black text-purple-600">10x</span>
            <span class="text-sm text-gray-600 font-medium">faster</span>
          </div>
        </div>

        <!-- 描述文本 - 简化 -->
        <p
          class="text-base sm:text-lg text-gray-600 max-w-xl mx-auto lg:mx-0 mb-10 leading-relaxed">
          {t("hero.description")}
        </p>

        <!-- CTA按钮 - 流光动画增强 -->
        <div class="flex justify-center lg:justify-start mb-12">
          <div class="relative group/cta">
            <!-- 背景光晕 -->
            <div class="absolute -inset-1 bg-banana-gradient rounded-xl blur opacity-0 group-hover/cta:opacity-50 transition-opacity duration-500"></div>
            
            <BananaButton
              href="/editor"
              size="lg"
              variant="primary"
              class="relative group touch-friendly shadow-2xl hover:shadow-3xl transform hover:scale-105 transition-all duration-300 overflow-hidden"
              aria-label="Start using Nano Banana AI Image Editor">
              
              <!-- 流光效果 -->
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
              
              <Icon
                name="heroicons:sparkles"
                class="w-5 h-5 mr-2 relative z-10 group-hover:animate-pulse"
              />
              <span class="relative z-10">{t("hero.cta.primary")}</span>
            </BananaButton>
          </div>
        </div>

        <!-- 社会证明 - 简化但增强视觉效果 -->
        <div class="flex items-center justify-center lg:justify-start gap-6 text-sm">
          <div class="flex items-center gap-2 bg-white/60 backdrop-blur-sm px-3 py-2 rounded-lg border border-gray-200 shadow-sm">
            <div class="flex -space-x-2">
              <div class="w-6 h-6 rounded-full bg-banana-gradient border-2 border-white shadow-md"></div>
              <div class="w-6 h-6 rounded-full bg-banana-secondary border-2 border-white shadow-md"></div>
              <div class="w-6 h-6 rounded-full bg-banana-accent border-2 border-white shadow-md"></div>
            </div>
            <span class="font-semibold text-gray-700">10,000+</span>
          </div>
          <div class="flex items-center gap-1 bg-white/60 backdrop-blur-sm px-3 py-2 rounded-lg border border-gray-200 shadow-sm">
            {
              [...Array(5)].map((_, i) => (
                <Icon
                  name="heroicons:star-solid"
                  class="w-3.5 h-3.5 text-yellow-400 drop-shadow-sm"
                />
              ))
            }
            <span class="font-semibold text-gray-700 ml-1">4.9</span>
          </div>
        </div>
      </div>

      <!-- 右侧演示区域 -->
      <div class="relative">
        <!-- 一致性展示区域 - 3D效果和光晕 -->
        <div
          class="group/card relative bg-white rounded-3xl shadow-2xl border-2 border-gray-200/50 overflow-hidden transform hover:scale-[1.02] hover:-rotate-1 transition-all duration-500">
          
          <!-- 边框光晕效果 -->
          <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-banana-primary/20 via-orange-500/20 to-banana-secondary/20 opacity-0 group-hover/card:opacity-100 transition-opacity duration-500 blur-xl"></div>
          
          <!-- 顶部标题区域 - 渐变动画 -->
          <div
            class="relative bg-gradient-to-r from-banana-primary via-orange-500 to-banana-secondary p-5 overflow-hidden">
            <!-- 流动背景 -->
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent animate-shimmer"></div>
            
            <div class="relative flex items-center gap-3 z-10">
              <div
                class="w-10 h-10 bg-white/25 backdrop-blur-md rounded-xl flex items-center justify-center shadow-lg transform group-hover/card:rotate-12 transition-transform duration-300">
                <Icon
                  name="heroicons:check-circle"
                  class="w-6 h-6 text-white drop-shadow-lg"
                />
              </div>
              <div class="flex-1">
                <h3 class="text-white font-bold text-lg mb-1 drop-shadow-md">
                  Perfect Element Consistency
                </h3>
                <p class="text-white/90 text-sm drop-shadow-sm">
                  Consistent across all scenes and seasons
                </p>
              </div>
            </div>
          </div>

          <!-- 4个季节展示 - 增强交互 -->
          <div class="p-5">
            <div class="grid grid-cols-2 gap-4">
              <!-- 春季 -->
              <div
                class="group/image aspect-square rounded-xl overflow-hidden relative shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105">
                <img
                  src="/images/hero-example-original.png"
                  alt="Nano banana AI Image Editor - Perfect element consistency example: Spring portrait with cherry blossom garden"
                  class="w-full h-full object-cover transition-transform duration-500 group-hover/image:scale-110"
                  loading="lazy"
                />
                <!-- 渐变遮罩 -->
                <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent opacity-0 group-hover/image:opacity-100 transition-opacity duration-300"></div>
                <div
                  class="absolute top-2 right-2 bg-pink-100/90 backdrop-blur-sm text-pink-700 rounded-full px-3 py-1 text-xs font-bold shadow-lg border border-white/50">
                  Spring
                </div>
              </div>

              <!-- 夏季 -->
              <div
                class="group/image aspect-square rounded-xl overflow-hidden relative shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105">
                <img
                  src="/images/hero-example-summer.png"
                  alt="Nano banana AI Image Editor - Perfect element consistency example: Summer portrait with beach and ocean"
                  class="w-full h-full object-cover transition-transform duration-500 group-hover/image:scale-110"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent opacity-0 group-hover/image:opacity-100 transition-opacity duration-300"></div>
                <div
                  class="absolute top-2 right-2 bg-blue-100/90 backdrop-blur-sm text-blue-700 rounded-full px-3 py-1 text-xs font-bold shadow-lg border border-white/50">
                  Summer
                </div>
              </div>

              <!-- 秋季 -->
              <div
                class="group/image aspect-square rounded-xl overflow-hidden relative shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105">
                <img
                  src="/images/hero-example-autumn.png"
                  alt="Nano banana AI Image Editor - Perfect element consistency example: Autumn portrait with maple forest"
                  class="w-full h-full object-cover transition-transform duration-500 group-hover/image:scale-110"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent opacity-0 group-hover/image:opacity-100 transition-opacity duration-300"></div>
                <div
                  class="absolute top-2 right-2 bg-orange-100/90 backdrop-blur-sm text-orange-700 rounded-full px-3 py-1 text-xs font-bold shadow-lg border border-white/50">
                  Autumn
                </div>
              </div>

              <!-- 冬季 -->
              <div
                class="group/image aspect-square rounded-xl overflow-hidden relative shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105">
                <img
                  src="/images/hero-example-winter.png"
                  alt="Nano banana AI Image Editor - Perfect element consistency example: Winter portrait with snow garden"
                  class="w-full h-full object-cover transition-transform duration-500 group-hover/image:scale-110"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent opacity-0 group-hover/image:opacity-100 transition-opacity duration-300"></div>
                <div
                  class="absolute top-2 right-2 bg-blue-50/90 backdrop-blur-sm text-blue-600 rounded-full px-3 py-1 text-xs font-bold shadow-lg border border-white/50">
                  Winter
                </div>
              </div>
            </div>

            <!-- 一致性保证 - 简化但增强 -->
            <div class="mt-5 flex items-center justify-center gap-2 bg-gradient-to-r from-green-50 to-emerald-50 rounded-xl p-3 border-2 border-green-300 shadow-md hover:shadow-lg transition-shadow">
              <Icon
                name="heroicons:check-circle"
                class="w-5 h-5 text-green-600 animate-pulse-slow"
              />
              <span class="font-bold text-gray-800 text-sm">
                100% Consistency Guaranteed
              </span>
            </div>
          </div>
        </div>

        <!-- 浮动装饰元素 - AI徽章增强 -->
        <div
          class="absolute -top-4 -right-4 w-16 h-16 bg-banana-gradient rounded-2xl flex items-center justify-center text-white font-bold shadow-2xl ai-button-glow border-2 border-white/50 transform hover:rotate-12 hover:scale-110 transition-all duration-300">
          <span class="text-sm drop-shadow-lg">AI</span>
        </div>

        <!-- 连接线装饰 -->
        <div class="absolute top-1/2 -left-8 w-16 h-0.5 bg-gradient-to-r from-transparent via-banana-primary/30 to-transparent hidden lg:block"></div>
        <div class="absolute bottom-1/4 -right-8 w-16 h-0.5 bg-gradient-to-r from-transparent via-banana-primary/30 to-transparent hidden lg:block"></div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-10px) rotate(5deg);
    }
  }

  @keyframes float-delayed {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-15px) rotate(-5deg);
    }
  }

  @keyframes float-slow {
    0%,
    100% {
      transform: translateY(0px) rotate(3deg);
    }
    50% {
      transform: translateY(-8px) rotate(-3deg);
    }
  }

  @keyframes float-particle {
    0%, 100% {
      transform: translateY(0px) translateX(0px);
      opacity: 0.3;
    }
    50% {
      transform: translateY(-20px) translateX(10px);
      opacity: 0.6;
    }
  }

  @keyframes pulse-slow {
    0%, 100% {
      opacity: 0.4;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.05);
    }
  }

  @keyframes pulse-slow-delayed {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.08);
    }
  }

  @keyframes move-horizontal {
    0% {
      transform: translateX(-100px);
    }
    50% {
      transform: translateX(100px);
    }
    100% {
      transform: translateX(-100px);
    }
  }

  @keyframes gradient-flow {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @keyframes shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  @keyframes bounce-subtle {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-3px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 4s ease-in-out infinite 1s;
  }

  .animate-float-slow {
    animation: float-slow 5s ease-in-out infinite 2s;
  }

  .animate-float-particle {
    animation: float-particle 4s ease-in-out infinite;
  }

  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }

  .animate-pulse-slow-delayed {
    animation: pulse-slow-delayed 5s ease-in-out infinite 1s;
  }

  .animate-move-horizontal {
    animation: move-horizontal 20s ease-in-out infinite;
  }

  .animate-gradient-flow {
    animation: gradient-flow 3s ease infinite;
  }

  .animate-shimmer {
    animation: shimmer 3s linear infinite;
  }

  .animate-bounce-subtle {
    animation: bounce-subtle 2s ease-in-out infinite;
  }

  /* AI按钮优雅动画 */
  .ai-button-glow {
    animation: aiGlow 3s ease-in-out infinite;
    transition: all 0.3s ease;
  }

  .ai-button-glow:hover {
    transform: scale(1.1) rotate(12deg);
    box-shadow: 0 10px 30px rgba(217, 119, 6, 0.5);
  }

  @keyframes aiGlow {
    0%,
    100% {
      transform: translateY(0px) scale(1);
      box-shadow: 0 4px 15px rgba(217, 119, 6, 0.4);
    }
    50% {
      transform: translateY(-3px) scale(1.05);
      box-shadow: 0 8px 25px rgba(217, 119, 6, 0.6);
    }
  }

  /* 移动端优化 */
  .touch-friendly {
    -webkit-tap-highlight-color: rgba(255, 215, 0, 0.2);
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    user-select: none;
    min-height: 44px;
    min-width: 44px;
  }

  /* 移动端响应式调整 */
  @media (max-width: 768px) {
    .animate-float,
    .animate-float-delayed,
    .animate-float-slow {
      display: none;
    }

    .animate-move-horizontal,
    .animate-float-particle {
      display: none;
    }

    .ai-button-glow {
      animation: aiGlowMobile 4s ease-in-out infinite;
    }

    @keyframes aiGlowMobile {
      0%,
      100% {
        transform: translateY(0px) scale(1);
        box-shadow: 0 2px 8px rgba(217, 119, 6, 0.2);
      }
      50% {
        transform: translateY(-2px) scale(1.01);
        box-shadow: 0 4px 12px rgba(217, 119, 6, 0.3);
      }
    }

    h1 {
      font-size: 2.5rem !important;
      line-height: 1.1;
    }

    .touch-friendly {
      padding: 16px 24px;
      font-size: 16px;
      font-weight: 600;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 2rem !important;
    }

    .text-lg {
      font-size: 1rem;
    }
  }

  /* 高对比度模式支持 */
  @media (prefers-contrast: high) {
    .bg-banana-gradient {
      background: #000;
      color: #fff;
    }

    .text-transparent {
      color: #000 !important;
      background: none !important;
    }
  }

  /* 减少动画偏好支持 */
  @media (prefers-reduced-motion: reduce) {
    .animate-float,
    .animate-float-delayed,
    .animate-float-slow,
    .animate-pulse,
    .animate-bounce,
    .animate-float-particle,
    .animate-pulse-slow,
    .animate-pulse-slow-delayed,
    .animate-move-horizontal,
    .animate-gradient-flow,
    .animate-shimmer,
    .animate-bounce-subtle,
    .ai-button-glow {
      animation: none;
    }
  }
</style>