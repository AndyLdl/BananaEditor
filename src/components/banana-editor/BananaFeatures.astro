---
/**
 * Z-Image Studio核心优势展示组件
 * 数据驱动的优势展示 + 情感化表达
 * 展示为什么选择Z-Image Studio的核心卖点
 */

import { Icon } from "astro-icon/components";
import { loadTranslations, createTranslator } from "../../i18n/utils";
import { detectLanguageFromRequest } from "../../utils/language-detector";

const currentLang = detectLanguageFromRequest(Astro.request);
const homeTranslations = await loadTranslations(currentLang, 'home');
const t = createTranslator(currentLang, homeTranslations);

// 核心优势数据
const advantages = [
  {
    id: "consistency",
    number: "100%",
    unit: "",
    icon: "heroicons:check-circle",
    title: t('advantages.consistency.title'),
    description: t('advantages.consistency.description'),
    gradient: "from-green-500 via-emerald-400 to-teal-500",
    bgGradient: "from-green-50 via-emerald-50 to-teal-50",
    iconBg: "bg-gradient-to-br from-green-500 to-emerald-600",
    numberColor: "text-green-600",
    highlight: t('advantages.consistency.highlight')
  },
  {
    id: "speed",
    number: "8",
    unit: "NFEs",
    icon: "heroicons:bolt",
    title: t('advantages.speed.title'),
    description: t('advantages.speed.description'),
    gradient: "from-yellow-400 via-orange-500 to-red-500",
    bgGradient: "from-yellow-50 via-orange-50 to-red-50",
    iconBg: "bg-gradient-to-br from-yellow-500 to-orange-600",
    numberColor: "text-orange-600",
    highlight: t('advantages.speed.highlight')
  },
  {
    id: "faster",
    number: "6B",
    unit: "",
    icon: "heroicons:rocket-launch",
    title: t('advantages.faster.title'),
    description: t('advantages.faster.description'),
    gradient: "from-purple-500 via-pink-500 to-red-500",
    bgGradient: "from-purple-50 via-pink-50 to-red-50",
    iconBg: "bg-gradient-to-br from-purple-500 to-pink-600",
    numberColor: "text-purple-600",
    highlight: t('advantages.faster.highlight')
  },
  {
    id: "quality",
    number: "#1",
    unit: "",
    icon: "heroicons:trophy",
    title: t('advantages.quality.title'),
    description: t('advantages.quality.description'),
    gradient: "from-blue-500 via-cyan-500 to-teal-500",
    bgGradient: "from-blue-50 via-cyan-50 to-teal-50",
    iconBg: "bg-gradient-to-br from-blue-500 to-cyan-600",
    numberColor: "text-blue-600",
    highlight: t('advantages.quality.highlight')
  }
];
---

<section class="py-20 sm:py-32 bg-z-bg relative overflow-hidden">
  <!-- 背景装饰 -->
  <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-5 pointer-events-none"></div>
  <div class="absolute top-0 left-1/4 w-96 h-96 bg-banana-primary/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-banana-secondary/5 rounded-full blur-3xl"></div>
  
  <div class="mx-auto max-w-7xl px-6 lg:px-8 relative z-10">
    
    <!-- 标题区域 -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-white font-medium text-sm mb-6 shadow-lg border border-white/10">
        <Icon name="heroicons:star" class="w-4 h-4 text-yellow-500" />
        <span>{t('advantages.badge')}</span>
      </div>
      
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold tracking-tight text-white mb-6">
        {t('advantages.title')}
      </h2>
      <p class="text-lg sm:text-xl text-gray-400 max-w-3xl mx-auto leading-relaxed">
        {t('advantages.subtitle')}
      </p>
    </div>

    <!-- 优势卡片网格 -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
      {advantages.map((advantage, index) => (
        <div 
          class="group relative"
          data-advantage={advantage.id}>
          
          <!-- 主卡片 -->
          <div class={`relative h-full bg-z-surface rounded-3xl p-8 border border-white/10 hover:border-white/30 transition-all duration-500 hover:shadow-2xl hover:shadow-${advantage.numberColor.split('-')[1]}-500/20 transform hover:-translate-y-2 overflow-hidden`}>
            
            <!-- 背景装饰 -->
            <div class={`absolute inset-0 bg-gradient-to-br ${advantage.gradient} opacity-0 group-hover:opacity-10 transition-opacity duration-500`}></div>
            <div class={`absolute -top-20 -right-20 w-40 h-40 bg-gradient-to-br ${advantage.gradient} rounded-full blur-3xl opacity-0 group-hover:opacity-20 transition-opacity duration-500`}></div>
            
            <!-- 图标 -->
            <div class="relative mb-6">
              <div class={`w-16 h-16 ${advantage.iconBg} rounded-2xl flex items-center justify-center shadow-xl transform group-hover:scale-110 group-hover:rotate-12 transition-all duration-500`}>
                <Icon 
                  name={advantage.icon} 
                  class="w-8 h-8 text-white" 
                />
              </div>
              <!-- 图标光晕 -->
              <div class={`absolute inset-0 ${advantage.iconBg} rounded-2xl blur-xl opacity-0 group-hover:opacity-50 transition-opacity duration-500`}></div>
            </div>

            <!-- 大数字 -->
            <div class="relative mb-4">
              <div class="flex items-baseline gap-2">
                <span class={`text-5xl lg:text-6xl font-black ${advantage.numberColor} leading-none transform group-hover:scale-110 transition-transform duration-300`}>
                  {advantage.number}
                </span>
                {advantage.unit && (
                  <span class={`text-2xl lg:text-3xl font-bold ${advantage.numberColor} opacity-80`}>
                    {advantage.unit}
                  </span>
                )}
              </div>
              {advantage.highlight && (
                <div class="mt-2 inline-flex items-center gap-1 px-3 py-1 bg-white/60 backdrop-blur-sm rounded-full text-xs font-semibold text-gray-700 border border-white/80">
                  <Icon name="heroicons:arrow-trending-up" class="w-3 h-3 text-green-600" />
                  <span>{advantage.highlight}</span>
                </div>
              )}
            </div>

            <!-- 标题 -->
            <h3 class="text-xl font-bold text-white mb-3 group-hover:text-gray-200 transition-colors">
              {advantage.title}
            </h3>
            
            <!-- 描述 -->
            <p class="text-gray-400 leading-relaxed text-sm mb-4">
              {advantage.description}
            </p>

            <!-- 底部装饰线 -->
            <div class={`absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r ${advantage.gradient} opacity-0 group-hover:opacity-100 transition-opacity duration-500`}></div>

            <!-- 悬停装饰 -->
            <div class="absolute top-4 right-4 w-8 h-8 bg-white/30 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transform group-hover:rotate-180 transition-all duration-500">
              <Icon name="heroicons:sparkles" class="w-4 h-4 text-white" />
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* 数字动画 */
  @keyframes countUp {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.8);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
  
  /* 卡片进入动画 */
  @media (prefers-reduced-motion: no-preference) {
    [data-advantage] {
      animation: fadeInUp 0.6s ease-out backwards;
    }
    
    [data-advantage="consistency"] { animation-delay: 0.1s; }
    [data-advantage="speed"] { animation-delay: 0.2s; }
    [data-advantage="faster"] { animation-delay: 0.3s; }
    [data-advantage="quality"] { animation-delay: 0.4s; }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }
  
  /* 悬停时的光晕效果 */
  .group:hover [class*="bg-gradient-to-br"] {
    filter: brightness(1.1);
  }
</style>