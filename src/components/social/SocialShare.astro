  }

  .social-share.icons .platform-label {
    display: none;
  }

  /* å¤åˆ¶é“¾æ¥æŒ‰é’® */
  .copy-link {
    --platform-color: #6b7280;
  }

  .copy-link.copied {
    --platform-color: #10b981;
