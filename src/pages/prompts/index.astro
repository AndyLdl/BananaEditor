  <script>
    // é¡µé¢åŠ è½½å®Œæˆåçš„åˆå§‹åŒ–
    document.addEventListener("DOMContentLoaded", () => {
      // ä»URLå‚æ•°è·å–æœç´¢å…³é”®è¯
      const urlParams = new URLSearchParams(window.location.search);
      const searchQuery = urlParams.get("search");

      if (searchQuery) {
