---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { loadTranslations } from "../i18n/utils";
import { detectLanguageFromRequest } from "../utils/language-detector";

// 获取当前语言
const currentLang = detectLanguageFromRequest(Astro.request);
const seoTranslations = await loadTranslations(currentLang, "seo");
---

<Layout
  title={seoTranslations.contact?.title ||
    "Contact | Z-Image Studio - Get Support & Connect"}>
  <Container>
    <!-- Hero 区域 -->
    <div class="relative py-20 sm:py-32 overflow-hidden bg-z-bg">
      <!-- 背景装饰 -->
      <div
        class="absolute inset-0 bg-gradient-to-br from-z-surface/30 via-z-bg to-z-surface/20">
      </div>
      <div
        class="absolute top-20 left-10 w-16 h-16 bg-banana-primary/10 rounded-full animate-float">
      </div>
      <div
        class="absolute bottom-20 right-10 w-12 h-12 bg-banana-secondary/10 rounded-full animate-float-delayed">
      </div>

      <div class="relative text-center max-w-4xl mx-auto">
        <div
          class="inline-flex items-center gap-2 px-4 py-2 bg-banana-gradient/20 rounded-full text-banana-primary font-medium text-sm mb-6 border border-banana-primary/30">
          <Icon name="heroicons:chat-bubble-left-right" class="w-4 h-4" />
          <span>Support & Contact</span>
        </div>

        <h1
          class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-white mb-6">
          <span class="block">We're Here to Help</span>
          <span
            class="block text-transparent bg-clip-text bg-banana-gradient mt-2">
            with Z-Image
          </span>
        </h1>

        <p class="text-xl text-z-text_muted max-w-3xl mx-auto leading-relaxed">
          Get support for Z-Image tools, technical assistance, or share your
          feedback. Our team is ready to help you create amazing images with our
          advanced AI technology.
        </p>
      </div>
    </div>

    <!-- 支持选项 -->
    <div class="py-20 bg-z-surface">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
            How Can We Help You?
          </h2>
          <p class="text-lg text-z-text_muted max-w-3xl mx-auto">
            Choose the best way to get support for your Z-Image needs
          </p>
        </div>

        <div class="max-w-2xl mx-auto">
          <div
            class="text-center p-8 bg-z-bg/50 rounded-2xl border border-z-border hover:border-banana-primary/30 transition-all duration-300 hover:shadow-xl">
            <div
              class="w-20 h-20 bg-banana-gradient rounded-2xl flex items-center justify-center mx-auto mb-6">
              <Icon name="heroicons:envelope" class="w-10 h-10 text-white" />
            </div>
            <h3 class="text-2xl font-semibold text-white mb-4">
              Email Support
            </h3>
            <p class="text-lg text-z-text_muted mb-6">
              Send us detailed questions about Z-Image Studio's features and
              usage. We typically respond within 2 hours.
            </p>
            <a
              href="mailto:support@z-image.ai"
              class="inline-flex items-center gap-2 px-8 py-4 bg-banana-gradient text-black font-semibold rounded-xl hover:shadow-lg transition-all duration-300 hover:scale-105">
              <Icon name="heroicons:envelope" class="w-5 h-5" />
              <span>Send Email</span>
            </a>
            <p class="text-sm text-z-text_muted mt-4">
              Monday - Friday, 9 AM - 6 PM PST
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- 联系表单区域 -->
    <div class="py-20 bg-z-bg">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 items-start">
          <!-- 联系信息 -->
          <div>
            <h2 class="text-3xl font-bold text-white mb-6">Get in Touch</h2>
            <p class="text-lg text-z-text_muted mb-8">
              Have questions about Z-Image? Need technical support? We're here
              to help you get the most out of our advanced image generation
              technology.
            </p>

            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 bg-banana-gradient rounded-xl flex items-center justify-center flex-shrink-0">
                  <Icon name="heroicons:envelope" class="w-6 h-6 text-white" />
                </div>
                <div>
                  <h3 class="font-semibold text-white mb-1">Email Support</h3>
                  <p class="text-z-text_muted mb-2">
                    Get detailed help with Z-Image tools
                  </p>
                  <a
                    href="mailto:support@z-image.ai"
                    class="text-banana-primary font-medium hover:text-banana-secondary">
                    support@z-image.ai
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 bg-banana-gradient rounded-xl flex items-center justify-center flex-shrink-0">
                  <Icon name="heroicons:clock" class="w-6 h-6 text-white" />
                </div>
                <div>
                  <h3 class="font-semibold text-white mb-1">Response Time</h3>
                  <p class="text-z-text_muted mb-2">
                    We typically respond within 2 hours
                  </p>
                  <span class="text-z-text_muted text-sm"
                    >Monday - Friday, 9 AM - 6 PM PST</span
                  >
                </div>
              </div>
            </div>

            <!-- FAQ 快速链接 -->
            <div
              class="mt-12 p-6 bg-z-surface rounded-2xl border border-z-border">
              <h3 class="font-semibold text-white mb-4">Quick Help</h3>
              <div class="space-y-3">
                <a
                  href="#faq"
                  class="flex items-center gap-2 text-banana-primary hover:text-banana-secondary">
                  <Icon name="heroicons:question-mark-circle" class="w-4 h-4" />
                  <span>How fast is Z-Image-Turbo generation?</span>
                </a>
                <a
                  href="#faq"
                  class="flex items-center gap-2 text-banana-primary hover:text-banana-secondary">
                  <Icon name="heroicons:question-mark-circle" class="w-4 h-4" />
                  <span>What makes Z-Image different?</span>
                </a>
                <a
                  href="#faq"
                  class="flex items-center gap-2 text-banana-primary hover:text-banana-secondary">
                  <Icon name="heroicons:question-mark-circle" class="w-4 h-4" />
                  <span>Can I use generated images commercially?</span>
                </a>
              </div>
            </div>
          </div>

          <!-- 联系表单 -->
          <div
            class="bg-z-surface rounded-2xl p-8 shadow-xl border border-z-border">
            <h3 class="text-2xl font-bold text-white mb-6">
              Send us a Message
            </h3>
            <Contactform />
          </div>
        </div>
      </div>
    </div>

    <!-- FAQ 区域 -->
    <div class="py-20 sm:py-32 bg-z-bg relative overflow-hidden">
      <div class="max-w-4xl mx-auto relative z-10">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
            Frequently Asked Questions
          </h2>
          <p class="text-lg text-z-text_muted">
            Quick answers to common questions about Z-Image technology
          </p>
        </div>

        <div class="space-y-6">
          <div
            class="bg-gradient-to-br from-z-surface via-z-surface to-z-surface_hover backdrop-blur-sm rounded-2xl p-6 border border-white/10 hover:border-banana-primary/50 transition-all duration-300 hover:shadow-xl hover:shadow-banana-primary/10">
            <h3 class="font-semibold text-white mb-3">
              How fast is Z-Image-Turbo compared to other models?
            </h3>
            <p class="text-z-text_muted">
              Z-Image-Turbo generates 1024×1024 images with sub-second inference
              using only 8 NFEs, making it one of the fastest open-source image
              generation models while maintaining state-of-the-art quality.
            </p>
          </div>

          <div
            class="bg-gradient-to-br from-z-surface via-z-surface to-z-surface_hover backdrop-blur-sm rounded-2xl p-6 border border-white/10 hover:border-banana-primary/50 transition-all duration-300 hover:shadow-xl hover:shadow-banana-primary/10">
            <h3 class="font-semibold text-white mb-3">
              What makes Z-Image different from other AI models?
            </h3>
            <p class="text-z-text_muted">
              Z-Image features a revolutionary 6B-parameter foundation model
              with single-stream diffusion transformer architecture, delivering
              ultra-fast inference, bilingual text rendering, and excellent
              instruction following capabilities.
            </p>
          </div>

          <div
            class="bg-gradient-to-br from-z-surface via-z-surface to-z-surface_hover backdrop-blur-sm rounded-2xl p-6 border border-white/10 hover:border-banana-primary/50 transition-all duration-300 hover:shadow-xl hover:shadow-banana-primary/10">
            <h3 class="font-semibold text-white mb-3">
              Can I use Z-Image images for commercial purposes?
            </h3>
            <p class="text-z-text_muted">
              Yes! Z-Image is released under Apache-2.0 license, which allows
              commercial use. Images generated with Z-Image are commercial-ready
              and optimized for e-commerce, advertising, social media, and
              marketing materials.
            </p>
          </div>

          <div
            class="bg-gradient-to-br from-z-surface via-z-surface to-z-surface_hover backdrop-blur-sm rounded-2xl p-6 border border-white/10 hover:border-banana-primary/50 transition-all duration-300 hover:shadow-xl hover:shadow-banana-primary/10">
            <h3 class="font-semibold text-white mb-3">
              Is there a limit on how many images I can generate?
            </h3>
            <p class="text-z-text_muted">
              Z-Image Studio offers generous free usage limits. For high-volume
              commercial use, we offer premium plans with increased limits and
              priority processing.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- CTA 区域 -->
    <div class="relative py-16 sm:py-20 md:py-24 overflow-hidden bg-z-bg">
      <div class="max-w-4xl mx-auto text-center relative z-10">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
          Ready to Try Z-Image?
        </h2>
        <p class="text-xl text-z-text_muted mb-8">
          Experience the power of ultra-fast AI image generation with
          state-of-the-art quality and bilingual text rendering.
        </p>
        <a
          href="/#hero"
          class="inline-flex items-center gap-2 px-8 py-4 bg-banana-gradient text-black font-semibold rounded-xl hover:shadow-xl transition-all duration-300 hover:scale-105">
          <Icon name="heroicons:rocket-launch" class="w-5 h-5" />
          <span>Start Creating Now</span>
          <Icon name="heroicons:arrow-right" class="w-5 h-5" />
        </a>
      </div>
    </div>
  </Container>
</Layout>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-10px) rotate(5deg);
    }
  }

  @keyframes float-delayed {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-15px) rotate(-5deg);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 4s ease-in-out infinite 1s;
  }
</style>
